import mongoose from "mongoose";
import Cloths_schema from "../Schemas/Cloths_schema";

export const Get_all_cloths = async (req, res) => {
  try {
    await mongoose.connect(process.env.mongo_db_url);
    const Cloths = await Cloths_schema.find({});
    
    return res.status(200).json({
      statusCode: 200,
      status: "Success",
      data: Cloths
    });
  } catch (error) {
    console.error("Error fetching shoes:", error);
    return res.status(500).json({
      statusCode: 500,
      status: "Failed",
      Details: "Internal server error occurred while fetching Cloths",
      error: error.message
    });
  } finally {
    await mongoose.connection.close();
  }
}; 