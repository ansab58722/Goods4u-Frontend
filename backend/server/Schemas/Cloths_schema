import mongoose from "mongoose";

const ColorSchema = new mongoose.Schema({
    name: { type: String, required: true },
    images: [{ type: String, required: true }]
}, { _id: false });

const ClothsSchema = new mongoose.Schema({
    id: {
        type: Number,
        required: true,
        unique: true
    },
    name: {
        type: String,
        required: true
    },
    brand: {
        type: String,
        required: true
    },
    gender: {
        type: String,
        required: true,
        enum: ['MEN', 'WOMEN', 'UNISEX']
    },
    category: {
        type: String,
        required: true
    },
    maincategory: {
        type: String,
        required: true
    },
    imageURL: {
        type: String
    },
    imageURL2: {
        type: String
    },
    imageURL3: {
        type: String
    },
    sizes: [{
        type: String
    }],
    colors: [ColorSchema],
    new_price: {
        type: Number,
        required: true
    },
    old_price: {
        type: Number,
        required: true
    },
    is_in_inventory: {
        type: Boolean,
        default: true
    },
    items_left: {
        type: Number,
        required: true,
        min: 0
    },
    slug: {
        type: String,
        required: true,
        unique: true
    },
    quantity: {
        type: Number,
        default: 1
    }
}, {
    timestamps: true,
    collection: 'Clothsdata'
});

const Cloths_schema = mongoose.model('Clothsdata', ClothsSchema);

export default Cloths_schema;